@{
    ViewData["Title"] = "Actividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/jquery-ui/jquery-ui.css" rel="stylesheet">
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}

<div class="text-center">
        <h2>SOLICITUD DE CERTIFICACION POA </h2>
</div>

    <div class="row">

       
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white"> II. ARTICULACION POA </h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-sm-9">
                                    </div>
                                <div class="form-group col-sm-3">
                                    <div class="input-group">
                                        <label>CITE: &nbsp; </label>
                                        <input type="text" class="form-control form-control-sm" id="txtCiteUnidadSolicitante" placeholder="Cite Unidad Solicitante" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        Lugar :&nbsp;&nbsp;&nbsp;
                                        <select class="form-control" id="cboBuscarLugar">
                                            <option value="0">SANTA CRUZ DE LA SIERRA </option>
                                        </select>
                                       
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group">
                                        Fecha: &nbsp;
                                        <span class="input-group-addon">&nbsp;</span>
                                        <input type="text" class="form-control" id="txtFechaRegistro" placeholder="Fecha Registro">
                                    </div>
                                    
                                </div>                               
                                
                            </div>
                            <!--<div class="form-row">
                                <div class="form-group col-sm-4">
                                    <input type="text" class="form-control form-control-sm" id="txtCodOperacion" placeholder="Cod.Ope.">
                                </div>
                                <div class="form-group col-sm-8">
                                    <input type="text" class="form-control form-control-sm" id="txtOperacion" placeholder="Operación">
                                </div>
                            </div>-->
                            <div class="form-row">
                                <!--<div class="form-group col-sm-4">
                                    <input type="text" class="form-control form-control-sm" id="txtIdActividad" placeholder="Cod.Act.">
                                </div>-->
                                <!--<div class="form-group col-sm-8">
                                    <input type="text" class="form-control form-control-sm" id="txtIdActividad" placeholder="ID Actividad">
                                </div>-->
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white"> III. DETALLE DE ITEM PARA CERTIFICACION POA DEL FORMULARIO POA </h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <select class="form-control form-control-sm" id="cboBuscarProducto">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-sm" id="tbProducto">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Nro Partida</th>
                                                <th>Detalle</th>
                                                <th>U.Medida</th>
                                                <th>Cantidad</th>
                                                <th>Precio</th>
                                                <th>Total</th>
                                                <th> </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <div class="col-sm-4">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">I. UNIDAD ORGANIZACIONAL SOLICITANTE</h6>
                        </div>
                        <div class="card-body">

                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupSubTotal">Regional/Departamento</span>
                                </div>
                                <select class="custom-select" id="cboRegional">
                                    <option value="1">07 SANTA CRUZ</option>
                                </select>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupIGV">Unidad Ejecutora</span>
                                </div>
                                <select class="custom-select" id="cboUnidadEjecutora">
                                    <option value="1">007 REGIONAL SANTA CRUZ</option>
                                </select>

                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="cboTipoDocumentoVenta">Tipo Programa</label>
                                </div>
                                <select class="custom-select" id="cboTipoPrograma">
                                    <option value="1">ESTABLECIMIENTO DE SALUD</option>
                                    <option value="2">UNIDAD ADMINISTRATIVA</option>
                                    <option value="3">PROGRAMA/ PROY. INVERSION</option>
                                </select>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="cboTipoDocumentoVenta">Establecimiento de Salud</label>
                                </div>
                                <select class="custom-select" id="cboPrograma">                                   
                                </select>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="txtUnidadResponsable">UnidadResponsable</label>
                                </div>
                                <select class="custom-select" id="cboUnidadResponsable">
                                </select>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupTotal">MONTO TOTAL</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="form-group mb-0">
                                <button class="btn btn-success btn-sm btn-block" id="btnTerminarCarpeta">Terminar Carpeta de Requerimiento</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>




    @section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->

    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Nueva_Carpeta.js"></script>


    <script src="~/vendor/jquery-ui/jquery-ui.js"></script>
    <script src="~/vendor/jquery-ui/idioma/datepicker-es.js"></script>
}


